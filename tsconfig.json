{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "esModuleInterop": true,
    "allowJs": true,
    "moduleResolution": "node",
    "outDir": "dist",
    "noEmitHelpers": true,
    "importHelpers": true,
    "sourceMap": true,
    "inlineSources": true,
    "sourceRoot": "/",
    "resolveJsonModule": true
},
"ts-node": {
  "esm": true,
},
"include": [
  "./*.js",
  "src/**/*.ts",
  "test/**/*.ts",
],
}
